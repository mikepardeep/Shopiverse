<!-- add the head section and the dynamic title to populate for signup -->

<!-- include the head -->
<%- include('../../shared/includes/head' ,{ pageTitle: 'Login'}) %>

<!-- include the specific css file form.css and auth.css -->
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
    <link rel="stylesheet" href="/styles/base.css">


</head>
<body>
    <!-- include the header -->
    <%- include('../../shared/includes/header')%>
    <main>
        <h1>Login</h1>
        <% if (inputData.errorMessage) { %>
            <!-- show the error message -->
            <section class="alert">
                <h2>Invalid Credential</h2>
                <p><%= inputData.errorMessage  %></p>
            </section>
        <% } %>
        <form action="/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">E-Mail</label>
                <input name="email" type="email" id="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input name="password" type="password" id="password"  value="<%= inputData.password %>" required>
            </p>
            <button class="btn">Logic</button>
            <p id="switch-form"><a href="/signup">Create a new user</a></p>
        </form>
    </main>


<!--Include the footer -->
<%- include('../../shared/includes/footer')%>
